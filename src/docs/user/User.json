{
  "/auth/login": {
    "post": {
      "tags": ["Auth"],
      "summary": "Login user",
      "description": "Logs in a user.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Login"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          },
          "headers": {
            "Authorization": {
              "type": "string",
              "description": "The JWT token"
            }
          }
        }
      }
    }
  }
}
